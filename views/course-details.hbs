<main>
  <div class="container">
    <h1 class="my-4">Course title :
      {{title}}
    </h1>

    <div class="row">

      <div class="col-md-8">
        <img class="img-fluid" src="{{imageUrl}}" alt="Express" />
      </div>

      <div class="col-md-4 text-center">
        <h3 class="my-3">Course Description</h3>
        <p>{{description}}</p>
        {{#if user}}
          {{#if isOwnedBy}}
            <a class="btn btn-danger" href="/delete/{{_id}}">Delete</a>
            <a class="btn btn-warning" href="/edit-course/{{_id}}">Edit</a>
          {{/if}}
          {{#if isPublic}}
            {{#unless isOwnedBy}}
              {{#if alreadyEnrolled}}
                <span class="enrolled-span">You are already enrolled</span>
              {{else}}
                <a class="btn btn-primary" href="/enroll/{{_id}}">Enroll</a>
              {{/if}}
            {{/unless}}
          {{else}}
            <br />
            <br />
            <p class="alert alert-danger"><span>This course is not public.</span></p>
          {{/if}}
        {{/if}}

      </div>
    </div>
  </div>
</main>